@model ContactModel

<div class="text-center">
    <h1 class="display-5 mb-5">Change Contact</h1>
</div>


<form asp-controller="Contact" asp-action="Editar" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label for="name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter the contact's name" />
        <div class="text-danger">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter the contact's E-mail" />
        <div class="text-danger">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>

    <div class="form-group">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter the contact's phone number" />
        <div class="text-danger">
                @Html.ValidationMessageFor(x => x.Phone)
            </div>
    </div>

    <button type="submit" class="btn btn-primary">Change</button>
    <a asp-controller="Contact" class="mt-5" asp-action="Index">Back to list</a>
</form>
