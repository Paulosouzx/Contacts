@model List<ContactModel>
<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-success" role="button">Create New Contact</a>
    </div>

    @if (TempData["messageSuccess"] != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert text-left text-white" aria-label="Close">X</button>
            <p class="mt-3" style="font: bold;">@TempData["messageSuccess"]</p>
        </div>   
    }

    @if (TempData["messageError"] != null)
    {
        <div class="alert alert-danger position-relative mt-3" role="alert">
            <button type="button" class="btn text-danger btn-sm close-alert text-left" aria-label="Close">X</button>
            <p>@TempData["messageError"]</p>
        </div>
    }



    <h1 class="display-5 mb-5">Contact List</h1>


    <table class="table" id="table-contacts">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null || Model.Any())
            {
                foreach(ContactModel contact in Model)
                {
                    <tr>
                        <th scope="row">@contact.ID</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>


                            <div>
                                <a role="button" class="btn btn-primary btn-sm text-white" asp-route-id="@contact.ID" asp-controller="Contact" asp-action="Editar">Edit</a>
                                <a role="button" class="btn btn-danger btn-sm text-white" asp-route-id="@contact.ID" asp-controller="Contact" asp-action="DeleteConfirm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>


