@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["messageError"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        <p class="text-center">@TempData["messageError"]</p>
    </div>
}

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<body>
    <div class="container">
        <div class="row px-3">
            <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
                <div class="img-left d-none d-md-flex">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" style="max-width: 100%; height: auto;" />
                </div>


                <div class="card-body">
                    <h4 class="title text-center mt-4">
                        Login into account
                    </h4>
                    <form class="form-box" asp-controller="Login" asp-action="Enter" method="post">
                        <div class="form-input">
                            <span><i class="fa fa-envelope-o"></i></span>
                            <input type="text" asp-for="Logi" placeholder="Email Address">
                        </div>
                            <div class="text-danger mb-1">
                                @Html.ValidationMessageFor(x => x.Login)
                            </div>
                        <div class="form-input">
                            <span><i class="fa fa-key"></i></span>
                            <input type="password" asp-for="Password" id="password" asp-for="Password" placeholder="Password">
                        </div>
                        <div class="text-danger ">
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>

                        <div class="mb-3">
                            <div class="custom-control custom-checkbox text-right">
                                <input type="checkbox" class="custom-control-input" id="cb1" name="">
                                <label class="custom-control-label" for="cb1">Remember me</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-block btn-custom text-uppercase">
                                Login
                            </button>
                        </div>

                        <div class="text-right">
                            <a href="#" class="forget-link">
                                Forget Password?
                            </a>
                        </div>
                        <hr class="my-4">
                        <div class="text-center mb-2">
                            Don't have an account?
                            <a href="#" class="register-link">
                                Register here
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
