@model ResetPasswordModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["messageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["messageError"]
    </div>
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<body>
    <div class="container">
        <div class="row px-3">
            <div class="col-lg-10 col-xl-5 card flex-row mx-auto px-0">
                <div class="card-body p-4">
                    <div class="mb-3">
                        <p><a class="text-decoration-none" asp-controller="Login" asp-action="Index"><i class="fa fa-arrow-left mr-1" aria-hidden="true"></i>Login</a></p>
                    </div>

                    <h4 class="title text-center mt-4">
                        Reset your password
                    </h4>
                    <form class="form-box" asp-controller="Login" asp-action="SendLinkToResetPassword" method="post">
                        <div class="form-input">
                            <span><i class="fa fa-user-o" aria-hidden="true"></i></span>
                            <input type="text" asp-for="Login" placeholder="Login">
                        </div>
                        <div class="text-danger mb-1">
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>
                        <div class="form-input">
                            <span><i class="fa fa-envelope-o"></i></span>
                            <input type="text" asp-for="Email" id="email" placeholder="Email">
                        </div>
                        <div class="text-danger ">
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-block btn-custom text-uppercase">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
